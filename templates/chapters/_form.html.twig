{% extends 'index.html.twig' %}

{% block body %}

<div class="container mx-auto p-6">
    <h2 class="text-3xl font-semibold text-gray-800 mb-6">{{ button_label|default('Save') }} Chapters</h2>

    {{ form_start(form, { 'attr': {'class': 'space-y-6'} }) }}
    
    <div class="bg-red p-6 rounded-lg shadow-md">
        <!-- Form Fields -->
        <div class="space-y-4">
            {{ form_widget(form) }}
        </div>

        <!-- Submit Button -->
        <div class="mt-6">
            <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-md shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75 transition duration-200">
                {{ button_label|default('Save') }}
            </button>
        </div>
    </div>

    {{ form_end(form) }}
</div>

{% endblock %}
