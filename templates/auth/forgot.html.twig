{% extends 'index.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 flex items-center justify-center">
        <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
            <div class="flex justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-red-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M10 15.5v-7c0-.41.47-.65.8-.4l4.67 3.5c.27.2.27.6 0 .8l-4.67 3.5c-.33.25-.8.01-.8-.4Zm11.96-4.45c.58 6.26-4.64 11.48-10.9 10.9 -4.43-.41-8.12-3.85-8.9-8.23 -.26-1.42-.19-2.78.12-4.04 .14-.58.76-.9 1.31-.7v0c.47.17.75.67.63 1.16 -.2.82-.27 1.7-.19 2.61 .37 4.04 3.89 7.25 7.95 7.26 4.79.01 8.61-4.21 7.94-9.12 -.51-3.7-3.66-6.62-7.39-6.86 -.83-.06-1.63.02-2.38.2 -.49.11-.99-.16-1.16-.64v0c-.2-.56.12-1.17.69-1.31 1.79-.43 3.75-.41 5.78.37 3.56 1.35 6.15 4.62 6.5 8.4ZM5.5 4C4.67 4 4 4.67 4 5.5 4 6.33 4.67 7 5.5 7 6.33 7 7 6.33 7 5.5 7 4.67 6.33 4 5.5 4Z"></path>
                </svg>
            </div>

            <h1 class="text-center text-2xl font-bold text-gray-800 mb-4">Mot de passe oublié ?</h1>
            <p class="text-center text-sm text-gray-600 mb-6">Entrez votre adresse e-mail pour recevoir un lien de réinitialisation.</p>

            {% for type, messages in app.flashes %}
                <div class="text-center text-{{ type == 'success' ? 'green' : 'red' }}-600 mb-4">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endfor %}

            <form action="{{ path('page_forgot_password') }}" method="POST" class="space-y-6">
                <div>
                    <label for="email" class="block text-gray-700">Adresse email</label>
                    <input type="email" name="_email" id="email" placeholder="Entrez votre email" 
                           class="w-full px-4 py-3 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600" required>
                </div>

                <div>
                    <button type="submit" class="w-full bg-red-600 text-white py-3 rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-600">
                        Envoyer le lien de réinitialisation
                    </button>
                </div>
            </form>

            <div class="mt-6 text-center">
                <a href="{{ path('app_login') }}" class="text-sm text-red-600 hover:underline">Retour à la connexion</a>
            </div>
        </div>
    </div>
{% endblock %}
