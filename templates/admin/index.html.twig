{% extends 'index.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <h1 class="text-3xl font-semibold text-gray-800 mb-6">Admin Dashboard</h1>

    <!-- Subjects Section -->
    <div class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Subjects</h2>
        <ul class="space-y-4">
            {% for subject in subjects %}
                <li class="flex justify-between items-center p-4 bg-white shadow-md rounded-lg">
                    <span class="text-lg text-gray-800">{{ subject.name }}</span>
                    <div class="space-x-4">
                        <a href="{{ path('app_subject_edit', {'id': subject.id}) }}" 
                           class="text-blue-600 hover:text-blue-800 font-medium">Edit</a>
                        
                        <!-- Delete Form for Subject -->
                        <form method="post" action="{{ path('app_subject_delete', {'id': subject.id}) }}" 
                              onsubmit="return confirm('Are you sure you want to delete this item?');" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subject.id) }}">
                            <button class="text-red-600 hover:text-red-800 font-medium">Delete</button>
                        </form>
                    </div>
                </li>
            {% else %}
                <p class="text-gray-500">No subjects available.</p>
            {% endfor %}
        </ul>
        <a href="{{ path('app_subject_new') }}" 
           class="inline-block mt-4 py-2 px-6 bg-blue-600 text-white font-semibold rounded-md shadow-md hover:bg-blue-700 transition duration-200">Add New Subject</a>
    </div>

    <!-- Tutorials Section -->
    <div class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Tutorials</h2>
        <ul class="space-y-4">
            {% for tutorial in tutorials %}
                <li class="flex justify-between items-center p-4 bg-white shadow-md rounded-lg">
                    <span class="text-lg text-gray-800">{{ tutorial.title }}</span>
                    <div class="space-x-4">
                        <a href="{{ path('app_tutorial_edit', {'id': tutorial.id}) }}" 
                           class="text-blue-600 hover:text-blue-800 font-medium">Edit</a>
                        
                        <!-- Delete Form for Tutorial -->
                        <form method="post" action="{{ path('app_tutorial_delete', {'id': tutorial.id}) }}" 
                              onsubmit="return confirm('Are you sure you want to delete this item?');" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tutorial.id) }}">
                            <button class="text-red-600 hover:text-red-800 font-medium">Delete</button>
                        </form>
                    </div>
                </li>
            {% else %}
                <p class="text-gray-500">No tutorials available.</p>
            {% endfor %}
        </ul>
        <a href="{{ path('app_tutorial_new') }}" 
           class="inline-block mt-4 py-2 px-6 bg-blue-600 text-white font-semibold rounded-md shadow-md hover:bg-blue-700 transition duration-200">Add New Tutorial</a>
    </div>

    <!-- Chapters Section -->
    <div>
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Chapters</h2>
        <ul class="space-y-4">
            {% for chapter in chapters %}
                <li class="flex justify-between items-center p-4 bg-white shadow-md rounded-lg">
                    <span class="text-lg text-gray-800">{{ chapter.title }}</span>
                    <div class="space-x-4">
                        <a href="{{ path('app_chapters_edit', {'id': chapter.id}) }}" 
                           class="text-blue-600 hover:text-blue-800 font-medium">Edit</a>
                        
                        <!-- Delete Form for Chapter -->
                        <form method="post" action="{{ path('app_chapters_delete', {'id': chapter.id}) }}" 
                              onsubmit="return confirm('Are you sure you want to delete this item?');" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapter.id) }}">
                            <button class="text-red-600 hover:text-red-800 font-medium">Delete</button>
                        </form>
                    </div>
                </li>
            {% else %}
                <p class="text-gray-500">No chapters available.</p>
            {% endfor %}
        </ul>
        <a href="{{ path('app_chapters_new') }}" 
           class="inline-block mt-4 py-2 px-6 bg-blue-600 text-white font-semibold rounded-md shadow-md hover:bg-blue-700 transition duration-200">Add New Chapter</a>
    </div>
</div>
{% endblock %}
